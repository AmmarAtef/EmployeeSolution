	<Field
		 ID="{45440863-9ab0-461b-8d35-6ca8fb042578}"
		 Name="EmployeeName"
		 DisplayName="Name"
		 StaticName="Name"
		 Type="Text"
		 Required="TRUE"
		 Group="Custom Site Columns"
		 Overwrite="TRUE"
		 AllowDeletion="TRUE"
		 OverwriteInChildScopes="TRUE"
		 MaxLength="100"
		 Min="20"  ShowInViewForms="TRUE" ShowAlways="TRUE" ShowInDisplayForm="TRUE" ShowField="TRUE">
